<section id="about" class="py-20 bg-block-obsidian">
  <div class="absolute inset-0 bg-dark-50"></div>
  <div class="relative z-10 container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 text-eclipse-purple eclipse-text-glow">
        About Eclipse
      </h2>
      <div class="w-16 h-16 mx-auto mb-8 bg-item-ender-pearl bg-contain bg-no-repeat animate-float"></div>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <div class="transparent-panel p-8 mb-8">
        <p class="text-lg md:text-xl text-center text-white text-shadow-md leading-relaxed mb-6">
          ECLIPSE is the flagship gaming & development fest at Manipal University Jaipur, featuring 12 exciting events 
          that bring together gamers, developers, and tech enthusiasts from across the region.
        </p>
        
        <p class="text-md md:text-lg text-center text-gray text-shadow-sm leading-relaxed">
          From intense LAN tournaments to creative workshops, ECLIPSE offers something for everyone. 
          Join us for two days of competition, learning, and unforgettable experiences in the world of gaming and technology.
        </p>
      </div>
      
      <!-- Key Features -->
      <div class="grid md:grid-cols-3 gap-6">
        <div class="achievement-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-diamond bg-contain bg-no-repeat"></div>
          <h3 class="text-xl font-bold mb-2 text-yellow text-shadow-md">Premium Events</h3>
          <p class="text-gray text-shadow-sm">12 carefully curated events including hackathons, tournaments, and workshops</p>
        </div>
        
        <div class="achievement-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-gold-ingot bg-contain bg-no-repeat"></div>
          <h3 class="text-xl font-bold mb-2 text-yellow text-shadow-md">Massive Prize Pool</h3>
          <p class="text-gray text-shadow-sm">Exciting prizes and recognition for winners across all categories</p>
        </div>
        
        <div class="achievement-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-nether-star bg-contain bg-no-repeat"></div>
          <h3 class="text-xl font-bold mb-2 text-yellow text-shadow-md">Networking</h3>
          <p class="text-gray text-shadow-sm">Connect with like-minded individuals and industry professionals</p>
        </div>
      </div>
      
      <!-- Stats -->
      <div class="mt-12 panel p-8">
        <h3 class="text-2xl font-bold text-center mb-8 text-eclipse-blue text-shadow-lg">Eclipse by Numbers</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="text-3xl font-bold text-gold mb-2">2000+</div>
            <div class="text-gray">Expected Participants</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gold mb-2">12</div>
            <div class="text-gray">Total Events</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gold mb-2">7</div>
            <div class="text-gray">Days of Action</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gold mb-2">1</div>
            <div class="text-gray">Epic Experience</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>