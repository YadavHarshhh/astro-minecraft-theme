---

<section id="events" class="py-20 bg-block-stone">
  <div class="absolute inset-0 bg-dark-50"></div>
  <div class="relative z-10 container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 text-eclipse-purple eclipse-text-glow">
        Main Events
      </h2>
      <p class="text-xl text-eclipse-blue text-shadow-md">August 23-24, 2025</p>
      <div class="w-16 h-16 mx-auto mt-6 bg-item-nether-star bg-contain bg-no-repeat animate-float"></div>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <!-- Events Inventory Grid -->
      <div class="inventory-grid mb-12">
        <!-- Hercules - Game Dev Workshop -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-crafting-table bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-yellow">Hercules</h3>
          <p class="text-sm text-gray mb-2">Game Development</p>
          <p class="text-xs">Workshop & Competition</p>
        </div>
        
        <!-- Achilles - 24hr Hackathon -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-redstone-dust bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-red">Achilles</h3>
          <p class="text-sm text-gray mb-2">24hr Hackathon</p>
          <p class="text-xs">Code & Create</p>
        </div>
        
        <!-- Odysseus - Story Games -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-book-written bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-aqua">Odysseus</h3>
          <p class="text-sm text-gray mb-2">Story Mode Games</p>
          <p class="text-xs">Narrative Adventures</p>
        </div>
        
        <!-- Orion - LAN Tournaments -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-diamond-sword bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-light-purple">Orion</h3>
          <p class="text-sm text-gray mb-2">LAN Tournaments</p>
          <p class="text-xs">BGMI & Valorant</p>
        </div>
        
        <!-- Picture Hunt -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-map-filled bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-green">Picture Hunt</h3>
          <p class="text-sm text-gray mb-2">Photo Challenge</p>
          <p class="text-xs">Campus Exploration</p>
        </div>
        
        <!-- Additional Events -->
        <div class="event-slot p-6 flex flex-col items-center justify-center text-center group">
          <div class="w-16 h-16 mb-4 bg-item-emerald bg-contain bg-no-repeat group-hover:animate-bounce"></div>
          <h3 class="font-bold text-lg mb-2 text-gold">More Events</h3>
          <p class="text-sm text-gray mb-2">Coming Soon</p>
          <p class="text-xs">Stay Tuned!</p>
        </div>
      </div>
      
      <!-- Event Details -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Hercules Details -->
        <div class="panel p-6">
          <div class="flex items-center mb-4">
            <div class="w-8 h-8 mr-3 bg-item-crafting-table bg-contain bg-no-repeat"></div>
            <h3 class="text-xl font-bold text-yellow">Hercules</h3>
          </div>
          <p class="text-gray mb-4">Game Development Workshop and Competition</p>
          <ul class="text-sm space-y-2">
            <li>• Unity/Unreal Engine workshops</li>
            <li>• 48-hour game jam</li>
            <li>• Mentorship from industry experts</li>
            <li>• Prize pool: ₹50,000</li>
          </ul>
        </div>
        
        <!-- Achilles Details -->
        <div class="panel p-6">
          <div class="flex items-center mb-4">
            <div class="w-8 h-8 mr-3 bg-item-redstone-dust bg-contain bg-no-repeat"></div>
            <h3 class="text-xl font-bold text-red">Achilles</h3>
          </div>
          <p class="text-gray mb-4">24-hour Hackathon Challenge</p>
          <ul class="text-sm space-y-2">
            <li>• Problem statements from sponsors</li>
            <li>• Team-based competition</li>
            <li>• Tech talks and networking</li>
            <li>• Prize pool: ₹1,00,000</li>
          </ul>
        </div>
        
        <!-- Orion Details -->
        <div class="panel p-6">
          <div class="flex items-center mb-4">
            <div class="w-8 h-8 mr-3 bg-item-diamond-sword bg-contain bg-no-repeat"></div>
            <h3 class="text-xl font-bold text-light-purple">Orion</h3>
          </div>
          <p class="text-gray mb-4">Premier LAN Gaming Tournament</p>
          <ul class="text-sm space-y-2">
            <li>• BGMI Squad Championships</li>
            <li>• Valorant 5v5 Battles</li>
            <li>• Professional gaming setups</li>
            <li>• Prize pool: ₹75,000</li>
          </ul>
        </div>
      </div>
      
      <!-- Call to Action -->
      <div class="text-center mt-12">
        <div class="transparent-panel p-8 max-w-2xl mx-auto">
          <h3 class="text-2xl font-bold mb-4 text-eclipse-blue">Ready to Compete?</h3>
          <p class="text-gray mb-6">
            Join thousands of participants in the most exciting gaming and tech fest in Rajasthan!
          </p>
          <a href="#register" class="button px-8 py-4 text-xl bg-eclipse-purple hover:bg-purple-600 transition-all transform hover:scale-105">
            Register for Events
          </a>
        </div>
      </div>
    </div>
  </div>
</section>