<section id="road-to-eclipse" class="py-20 bg-block-netherrack">
  <div class="absolute inset-0 bg-dark-75"></div>
  <div class="relative z-10 container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 text-red eclipse-text-glow">
        Road to Eclipse
      </h2>
      <p class="text-xl text-orange text-shadow-md">August 16-22, 2025</p>
      <div class="w-16 h-16 mx-auto mt-6 bg-item-blaze-rod bg-contain bg-no-repeat animate-float"></div>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <div class="book p-8 mb-8">
        <h3 class="text-2xl font-bold mb-6 text-center">Pre-Event Activities</h3>
        <p class="text-center mb-8 text-lg">
          Get ready for the main event with our exciting pre-activities designed to build excitement and showcase talent!
        </p>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- PitStation -->
          <div class="slot p-4 hover:raised-slot transition-all duration-300 cursor-pointer group">
            <div class="w-12 h-12 mx-auto mb-3 bg-item-minecart-normal bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-center mb-2 text-eclipse-purple">PitStation</h4>
            <ul class="text-sm space-y-1">
              <li>• F1 Racing</li>
              <li>• FIFA Tournament</li>
              <li>• TEKKEN Battles</li>
              <li>• Minecraft Build</li>
            </ul>
          </div>
          
          <!-- Vanguard -->
          <div class="slot p-4 hover:raised-slot transition-all duration-300 cursor-pointer group">
            <div class="w-12 h-12 mx-auto mb-3 bg-item-diamond-sword bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-center mb-2 text-eclipse-purple">Vanguard</h4>
            <ul class="text-sm space-y-1">
              <li>• BGMI TDM</li>
              <li>• Valorant TDM</li>
              <li>• CODM TDM</li>
              <li>• Quick Matches</li>
            </ul>
          </div>
          
          <!-- Shonen Showdown -->
          <div class="slot p-4 hover:raised-slot transition-all duration-300 cursor-pointer group">
            <div class="w-12 h-12 mx-auto mb-3 bg-item-book-enchanted bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-center mb-2 text-eclipse-purple">Shonen Showdown</h4>
            <ul class="text-sm space-y-1">
              <li>• Anime Screening</li>
              <li>• Anime Quiz</li>
              <li>• Character Cosplay</li>
              <li>• Trivia Night</li>
            </ul>
          </div>
          
          <!-- Keyboard Smashers -->
          <div class="slot p-4 hover:raised-slot transition-all duration-300 cursor-pointer group">
            <div class="w-12 h-12 mx-auto mb-3 bg-item-book-writable bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-center mb-2 text-eclipse-purple">Keyboard Smashers</h4>
            <ul class="text-sm space-y-1">
              <li>• Speed Typing</li>
              <li>• Accuracy Test</li>
              <li>• Code Typing</li>
              <li>• Daily Challenges</li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Timeline -->
      <div class="transparent-panel p-6">
        <h3 class="text-xl font-bold text-center mb-6 text-eclipse-blue">Weekly Schedule</h3>
        <div class="grid md:grid-cols-7 gap-2 text-center">
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 16</div>
            <div class="text-sm">PitStation</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 17</div>
            <div class="text-sm">Vanguard</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 18</div>
            <div class="text-sm">Shonen</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 19</div>
            <div class="text-sm">Keyboard</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 20</div>
            <div class="text-sm">Mixed</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 21</div>
            <div class="text-sm">Finals</div>
          </div>
          <div class="achievement-panel p-3">
            <div class="font-bold text-yellow">Aug 22</div>
            <div class="text-sm">Prep Day</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>