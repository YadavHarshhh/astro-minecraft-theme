---

<section id="sponsors" class="py-20 bg-block-gold-block">
  <div class="absolute inset-0 bg-dark-50"></div>
  <div class="relative z-10 container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 text-gold eclipse-text-glow">
        Our Sponsors
      </h2>
      <p class="text-xl text-yellow text-shadow-md">Powering the Future of Gaming & Tech</p>
      <div class="w-16 h-16 mx-auto mt-6 bg-item-emerald bg-contain bg-no-repeat animate-float"></div>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <!-- Title Sponsors -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-8 text-eclipse-blue">Title Sponsors</h3>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="raised-slot p-8 text-center hover:eclipse-glow transition-all duration-300 group">
            <div class="w-24 h-24 mx-auto mb-4 bg-item-diamond-block bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="text-xl font-bold text-gold mb-2">Premium Sponsor</h4>
            <p class="text-gray">Your Company Here</p>
            <p class="text-sm text-eclipse-blue mt-2">Contact us for partnership opportunities</p>
          </div>
          
          <div class="raised-slot p-8 text-center hover:eclipse-glow transition-all duration-300 group">
            <div class="w-24 h-24 mx-auto mb-4 bg-item-emerald-block bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="text-xl font-bold text-gold mb-2">Tech Partner</h4>
            <p class="text-gray">Your Company Here</p>
            <p class="text-sm text-eclipse-blue mt-2">Exclusive technology partnership</p>
          </div>
        </div>
      </div>
      
      <!-- Gold Sponsors -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-8 text-eclipse-blue">Gold Sponsors</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="raised-slot p-6 text-center hover:eclipse-glow transition-all duration-300 group">
            <div class="w-16 h-16 mx-auto mb-3 bg-item-gold-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-gold">Gold Partner 1</h4>
            <p class="text-sm text-gray">Gaming Hardware</p>
          </div>
          
          <div class="raised-slot p-6 text-center hover:eclipse-glow transition-all duration-300 group">
            <div class="w-16 h-16 mx-auto mb-3 bg-item-gold-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-gold">Gold Partner 2</h4>
            <p class="text-sm text-gray">Software Solutions</p>
          </div>
          
          <div class="raised-slot p-6 text-center hover:eclipse-glow transition-all duration-300 group">
            <div class="w-16 h-16 mx-auto mb-3 bg-item-gold-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h4 class="font-bold text-gold">Gold Partner 3</h4>
            <p class="text-sm text-gray">Cloud Services</p>
          </div>
        </div>
      </div>
      
      <!-- Silver Sponsors -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-8 text-eclipse-blue">Silver Sponsors</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="slot p-4 text-center hover:raised-slot transition-all duration-300 group">
            <div class="w-12 h-12 mx-auto mb-2 bg-item-iron-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h5 class="font-bold text-gray text-sm">Silver 1</h5>
          </div>
          
          <div class="slot p-4 text-center hover:raised-slot transition-all duration-300 group">
            <div class="w-12 h-12 mx-auto mb-2 bg-item-iron-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h5 class="font-bold text-gray text-sm">Silver 2</h5>
          </div>
          
          <div class="slot p-4 text-center hover:raised-slot transition-all duration-300 group">
            <div class="w-12 h-12 mx-auto mb-2 bg-item-iron-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h5 class="font-bold text-gray text-sm">Silver 3</h5>
          </div>
          
          <div class="slot p-4 text-center hover:raised-slot transition-all duration-300 group">
            <div class="w-12 h-12 mx-auto mb-2 bg-item-iron-ingot bg-contain bg-no-repeat group-hover:animate-bounce"></div>
            <h5 class="font-bold text-gray text-sm">Silver 4</h5>
          </div>
        </div>
      </div>
      
      <!-- Sponsorship CTA -->
      <div class="text-center">
        <div class="achievement-panel p-8 max-w-2xl mx-auto">
          <div class="w-16 h-16 mx-auto mb-4 bg-item-nether-star bg-contain bg-no-repeat animate-float"></div>
          <h3 class="text-2xl font-bold mb-4 text-gold">Become a Sponsor</h3>
          <p class="text-gray mb-6">
            Join us in creating an unforgettable experience for 2000+ participants. 
            Partner with Eclipse '25 and showcase your brand to the next generation of gamers and developers.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="button px-6 py-3 bg-eclipse-purple hover:bg-purple-600 transition-all">
              Partnership Inquiry
            </a>
            <a href="/sponsorship-deck.pdf" class="button px-6 py-3 bg-gold hover:bg-yellow-600 transition-all">
              Download Deck
            </a>
          </div>
        </div>
      </div>
      
      <!-- Benefits -->
      <div class="mt-12 grid md:grid-cols-3 gap-6">
        <div class="transparent-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-diamond bg-contain bg-no-repeat"></div>
          <h4 class="font-bold text-eclipse-blue mb-2">Brand Visibility</h4>
          <p class="text-sm text-gray">Reach 2000+ engaged participants and online audience</p>
        </div>
        
        <div class="transparent-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-emerald bg-contain bg-no-repeat"></div>
          <h4 class="font-bold text-eclipse-blue mb-2">Talent Access</h4>
          <p class="text-sm text-gray">Connect with top gaming and tech talent from universities</p>
        </div>
        
        <div class="transparent-panel p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-item-nether-star bg-contain bg-no-repeat"></div>
          <h4 class="font-bold text-eclipse-blue mb-2">Community Impact</h4>
          <p class="text-sm text-gray">Support the growth of gaming and tech ecosystem</p>
        </div>
      </div>
    </div>
  </div>
</section>